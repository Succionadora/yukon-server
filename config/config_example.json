{
	"use_envs": "true",
	"crypto": {
		"secret": "${SECRET}",
		"rounds": 10,
		"loginKeyExpiry": 300
	},
	"database": {
		"host": "${DATABASE_HOST}",
		"user": "${DATABASE_USER}",
		"password": "${DATABASE_PASSWORD}",
		"database": "${DATABASE_NAME}",
		"dialect": "mysql",
		"debug": false,
		"logQueryParameters": false
	},
	"socketio": {
		"https": "${SOCKETIO_HTTPS}",
		"ssl": {
			"cert": "${SSL_CERT_PATH}",
			"ca": "${SSL_CA_PATH}",
			"key": "${SSL_KEY_PATH}"
		}
	},
	"cors": {
		"origin": "${CORS_ORIGIN}"
	},
	"rateLimit": {
		"enabled": true,
		"addressConnectsPerSecond": 5,
		"addressEventsPerSecond": 50,
		"userEventsPerSecond": 10,
		"ipAddressHeader": false
	},
	"worlds": {
		"Login": {
			"host": "localhost",
			"port": 6111
		},
		"Blizzard": {
			"host": "localhost",
			"port": 6112,
			"maxUsers": 300
		}
	},
	"game": {
		"preferredSpawn": 0,
		"iglooIdOffset": 2000
	}
